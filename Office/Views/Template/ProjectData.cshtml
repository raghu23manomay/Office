                },
                dataType: "text",

                success: function (data) {

                    $('#TemplateData').html(data);
                },
                error: function (error) {

                }
            });
        });

        $('#btnGenerateDataTemplate').on("click", function (e) {

            var DTTemplateID = $('#DTTemplateID').val();
            var DataTemplateName = $('#DataTemplateName').val();

            var devid = 0;
            var CoOrdinatorID = 0;
            var AssistanceID = 0;
            var contractorID = 0;
            var ConsultantId = 0;
            var AssistanceID = 0;
