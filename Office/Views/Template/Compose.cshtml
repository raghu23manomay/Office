@model office.Models.temlatesInfo
@{
    ViewBag.Title = "Compose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
                <div class="file-manager">
                    
                    <div class="space-25"></div>
                    <h5>PlaceHolders</h5>
                   
                    <ul class="folder-list m-b-md" style="padding: 0" id="UserPlaceHolder"></ul>
                    
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">
           
            <h2>
                Compose Template
            </h2>
        </div>
        <div class="form-group">
            @Html.HiddenFor(a => a.TemplateID, new { @id = "TemplateID" })
            @Html.TextBoxFor(a => a.TemplateName, new { @class = "form-control", title = "CityName", @id = "TemplateName" })
        </div>
        <div class="mail-box">
            
                <div id="summernote"   ondrop="drop(event)" ondragover="allowDrop(event)">
                 @try{
                     if (Model != null)
                     {
                    @(new HtmlString(@Model.Description))
                         }
                     }catch{}
                </div>
            <div class="mail-body text-right tooltip-demo">
                <a class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Send" id="btnsave"><i class="fa fa-reply"></i> Save</a>
               
            </div>
            <div class="clearfix"></div> 
        </div>
    </div>
    <div class="col-md-9">

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
<link href="~/css/style.css" rel="stylesheet" />

<script>
    $('#summernote').summernote({
                placeholder: 'Write Something here',
        tabsize: 2,
        height: 400
    });
</script>
<script>
    $(document).ready(function () {

        $.ajax({
            url: "@Url.Action("GetPlaceholder", "Template")",
            success: function (data) {

                $('#UserPlaceHolder').html(data);
            }
        }); 

        $('#btnsave').on('click', function () { 
            var CityName;
            CityName = $("#TemplateName").val();
            if (TemplateName == "") {
                $("#NameTemplateName").show();
                return false;
            }
            else { 
                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    url: '/Template/SaveTemplate', 
                    data:
                    {
                        TemplateID: $("#TemplateID").val(),
                        TemplateName: $("#TemplateName").val(),
                        Description: $(".note-editable").html()
                    },
                    success: function (da) {
                        location.href = "DocTemplateList";  
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                    }
                });
            }
        });
    });
</script>
<script>
    function allowDrop(ev) {
        ev.preventDefault();
    }

    function drag(ev) {
        ev.dataTransfer.setData("text", ev.target.id);
    }

    function drop(ev) {
        ev.preventDefault();
        var data = ev.dataTransfer.getData("text");
        ev.target.appendChild(document.getElementById(data));
    }
</script>